<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CAMPEROS</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/town.css" />
  </head>
  <body class="container-fluid">
    <%- include('navbar') %>
    <section class="first row d-flex justify-content-center">
      <div
        class="contenedor d-flex justify-content-center align-items-center gap-5"
      >
        <% result.forEach(town => { %>
        <a href="/town/oneTown/<%= town.town_id %>">
          <div class="card p-1" style="width: 18rem">
            <img
              src="/images/town/<%= town.img %>"
              class="card-img-top"
              alt="imgen representativa del pueblo"
            />
            <div class="card-body">
              <h4 class="card-title text-center"><%= town.town_name %></h4>
              <div class="row text-center pt-2">
                <p class="col-6">
                  <b><%= town.city_name%></b>
                </p>
                <p class="col-6">
                  <b><%= town.region_name%></b>
                </p>
              </div>
              <p class=""><i><%= town.description%></i></p>
            </div>
          </div>
        </a>
        <% }) %>
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
