<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>CAMPEROS</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/activity.css" />
  </head>
  <body class="container-fluid">
    <%- include('navbar_user') %>
    <section class="first row d-flex justify-content-center">
      <h1 class="presentation col-12 mb-1">
        Busca <span style="color: #ebeb14">actividades</span> y
        <br />
        disfruta
      </h1>
      <div
        class="contenedor col-12 wrap d-flex justify-content-center align-items-center gap-5"
      >
        <% result.forEach(activity => { %>
        <a href="/town/oneTown_user/<%= activity.town_id%>">
          <div class="card p-2 col-3 text-center" style="width: 18rem">
            <img
              src="/images/activity/<%= activity.activity_img %>"
              class="card-img-top"
            />
            <div class="card-body">
              <p class="card-title"><%= activity.activity_name %></p>
              <div class="d-flex justify-content-around">
                <p class="card-text"><%= activity.activity_type %></p>
                <p class="card-text" value="<%= activity.activity_likes %>">
                  <%=activity.activity_likes %><a
                    href="/activity/like_user/<%= activity.activity_id %>"
                    >üëç</a
                  >
                </p>
              </div>
              <h4><b><%=activity.town_name %></b></h4>
            </div>
          </div>
        </a>
        <% }) %>
      </div>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
